<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <com.mei.widget.round.RoundView
        android:id="@+id/room_main_circle_avatar_bg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="9dp"
        app:is_circle="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/transparent" />

    <com.mei.widget.round.RoundImageView
        android:id="@+id/room_main_circle_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@id/room_main_circle_avatar_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:radius_all="25dp"
        tools:background="@color/color_4CB866" />

    <TextView
        android:id="@+id/room_main_circle_avatar_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxWidth="55dp"
        android:maxLines="2"
        android:textColor="@color/color_333333"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/room_main_circle_avatar"
        tools:ignore="SmallSp"
        tools:text="德莱文老师" />


</androidx.constraintlayout.widget.ConstraintLayout>