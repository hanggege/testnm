<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_intimate_banner_img"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:src="@drawable/icon_intimate_banner_img" />

    <View
        android:id="@+id/item_intimate_banner_img_end_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/item_intimate_banner_img"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/item_intimate_banner_img_top_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_intimate_banner_img" />

    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/item_intimate_banner_RT_img"
        android:layout_width="43dp"
        android:layout_height="15dp"
        android:visibility="gone"
        app:clearsAfterStop="false"
        app:fillMode="Forward"
        app:layout_constraintBottom_toBottomOf="@id/item_intimate_banner_img_top_line"
        app:layout_constraintEnd_toEndOf="@id/item_intimate_banner_img_end_line"
        app:layout_constraintStart_toStartOf="@id/item_intimate_banner_img_end_line"
        app:layout_constraintTop_toTopOf="@id/item_intimate_banner_img_top_line"
        tools:ignore="ContentDescription"
        tools:src="@drawable/icon_intimate_banner_rt"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/item_intimate_banner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:includeFontPadding="false"
        android:textColor="@color/color_333333"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/item_intimate_banner_img"
        app:layout_constraintStart_toStartOf="@id/item_intimate_banner_img"
        app:layout_constraintTop_toBottomOf="@id/item_intimate_banner_img"
        tools:text="免费提问" />

</androidx.constraintlayout.widget.ConstraintLayout>