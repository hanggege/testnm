<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/c2c_im_audience"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:visibility="gone"
    tools:visibility="visible">

    <FrameLayout
        android:id="@+id/fl_head_audience_frame"
        android:layout_width="54dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <com.mei.widget.round.RoundImageView
            android:id="@+id/fl_head_audience"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/default_avatar_90"
            app:radius_all="40dp" />

        <ImageView
            android:id="@+id/iv_online_status"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/icon_online_status"
            android:visibility="invisible"
            tools:visibility="visible" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:layout_toEndOf="@+id/fl_head_audience_frame"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/iv_service_representation"
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:background="@drawable/icon_service_bg"
                android:gravity="center"
                android:maxLength="3"
                android:layout_marginEnd="5dp"
                android:paddingStart="13dp"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textSize="8sp"
                android:shadowColor="#40000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:textStyle="bold"
                android:visibility="gone"
                tools:ignore="RtlSymmetry,SmallSp"
                tools:text="安娜家"
                tools:visibility="visible" />


            <TextView
                android:id="@+id/tv_level"
                android:layout_width="38dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:gravity="center_vertical|right"
                android:maxLength="2"
                android:paddingEnd="10dp"
                android:shadowColor="#40000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:textColor="@android:color/white"
                android:textSize="9sp"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded,RtlSymmetry,SmallSp" />

            <com.mei.widget.round.RoundTextView
                android:id="@+id/user_extra_tv"
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="9sp"
                android:visibility="gone"
                tools:visibility="visible"
                app:stroke_radius="8dp"
                tools:ignore="SmallSp" />

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/id_flowlayout_no_zhubo"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                app:max_select="-1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/show_xinbi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text=""
                android:textColor="#999999"
                android:textSize="12sp"
                tools:text="贡献心币" />

            <TextView
                android:id="@+id/tv_xin_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="2dp"
                android:gravity="center"
                android:textColor="@color/color_333333"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="5.59w" />

            <TextView
                android:id="@+id/send_xinbi"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginStart="@dimen/dp_10"
                android:gravity="center"
                android:text=""
                android:textColor="#999999"
                android:textSize="12sp"
                tools:text="送我心币" />

            <TextView
                android:id="@+id/tv_give_me_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:textColor="@color/color_333333"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="57700.59w" />

            <TextView
                android:id="@+id/connect_xinbi"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text=""
                android:textColor="#999999"
                android:textSize="12sp"
                tools:text="连线次数" />

            <TextView
                android:id="@+id/tv_give_me_conet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:textColor="@color/color_333333"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="12999.9w" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>