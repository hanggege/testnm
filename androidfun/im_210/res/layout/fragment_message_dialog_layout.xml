<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_message_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rv_backgroundColor="@android:color/white"
    app:rv_cornerRadius_TL="12dp"
    app:rv_cornerRadius_TR="12dp">


    <ImageView
        android:id="@+id/back_view"
        android:layout_width="37dp"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingEnd="15dp"
        android:paddingBottom="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/bg_black_back_arrow"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/top_title_tv_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/top_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="私聊"
            android:textColor="@color/color_333333"
            android:textSize="17sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/live_im_service_representation_dialog"
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:background="@drawable/icon_service_bg"
            android:gravity="center"
            android:maxLength="3"
            android:paddingStart="13dp"
            android:shadowColor="#40000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:ignore="RtlSymmetry,SmallSp"
            tools:text="安娜家"
            tools:visibility="visible" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/chat_message_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_title_tv_layout"
        android:layout_marginTop="15dp" />

    <View
        android:id="@+id/chat_message_v"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_title_tv_layout"
        android:background="@color/transparent"
        android:visibility="gone" />

</com.flyco.roundview.RoundRelativeLayout>