<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.flyco.roundview.RoundRelativeLayout
        android:id="@+id/new_message_rrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7.5dp"
        app:rv_backgroundColor="@android:color/white"
        app:rv_cornerRadius="5dp">

        <com.mei.widget.round.RoundImageView
            android:id="@+id/new_message_notification_avatar_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/default_avatar_50"
            app:radius_all="50dp" />

        <LinearLayout
            android:id="@+id/new_message_notification_title_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9.5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="64dp"
            android:layout_toRightOf="@+id/new_message_notification_avatar_iv"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/new_message_notification_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="情感咨询李老师" />

            <ImageView
                android:id="@+id/new_message_notification_service_icon_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_service_list_masonry"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/new_message_notification_connect_icon_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:src="@drawable/icon_message_visitors_connect"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>


        <TextView
            android:id="@+id/new_message_notification_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new_message_notification_title_ll"
            android:layout_marginLeft="9.5dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="64dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/new_message_notification_avatar_iv"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/color_666666"
            android:textSize="14sp"
            tools:text="分手后我还是喜欢她，她跟我说没有以前的感觉了，应该不喜欢应该不喜欢应该不喜欢应该不喜欢应该不喜欢" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="回复"
            android:textColor="@color/color_9b9b9b"
            android:textSize="13sp" />

    </com.flyco.roundview.RoundRelativeLayout>

</FrameLayout>
