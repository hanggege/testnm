<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    tools:background="@android:color/holo_blue_light">

    <com.flyco.roundview.RoundTextView
        android:id="@+id/im_time_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:includeFontPadding="false"
        android:padding="5dp"
        android:text="12:00"
        android:textColor="#989898"
        android:textSize="12sp"
        app:rv_cornerRadius="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:paddingRight="15dp">

        <include layout="@layout/include_avatar_42" />


        <!--这个结构下面的为每条消息体，上面的是通用消息内容，一般都会有-->
        <com.flyco.roundview.RoundLinearLayout
            android:id="@+id/im_message_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            app:rv_backgroundColor="@android:color/white"
            app:rv_cornerRadius="6dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layoutDirection="ltr">

                <TextView
                    android:id="@+id/im_send_service_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp"
                    tools:ignore="MissingConstraints"
                    tools:text="专属服务名称" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/history_service_cl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="ltr"
                    app:layout_constraintTop_toBottomOf="@+id/im_send_service_name_tv"
                    tools:ignore="MissingConstraints"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/im_send_service_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/color_FF3A3A"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints"
                        tools:text="189"
                        tools:visibility="gone" />

                    <ImageView
                        android:id="@+id/im_send_service_unit"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/icon_service_list_masonry"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/im_send_service_price_tv"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/im_send_specification_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/color_999999"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/im_send_service_unit"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints"
                        tools:text="111" />

                    <TextView
                        android:id="@+id/im_send_service_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/color_999999"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/im_send_specification_tv"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints"
                        tools:text="11" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/price_text_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    app:layout_constraintTop_toBottomOf="@+id/im_send_service_name_tv"
                    tools:ignore="MissingConstraints"
                    tools:text="砖石"
                    android:gravity="center_vertical"
                    tools:visibility="gone" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.flyco.roundview.RoundLinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp">

            <ImageView
                android:id="@+id/im_message_retry"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/im_send_error_img"
                android:visibility="gone"
                tools:visibility="gone" />

            <ProgressBar
                android:id="@+id/im_message_sending"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:indeterminateDrawable="@drawable/smallprogressbars"
                android:visibility="visible" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>