<?xml version="1.0" encoding="utf-8"?>
<com.mei.base.weight.relative.RoundConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingBottom="32dp"
    app:rv_backgroundColor="@android:color/white"
    app:rv_cornerRadius="8dp">

    <TextView
        android:id="@+id/follow_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="下麦前关注一下达人吧" />

    <com.mei.widget.choince.ChoiceView
        android:id="@+id/back_choice"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:padding="15dp"
        app:choice_type="cross"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/stop_stream"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="55dp"
        android:gravity="center"
        android:text="下麦"
        android:textColor="@color/color_999999"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/follow_title"
        app:rv_backgroundColor="@color/color_f8f8f8"
        app:rv_cornerRadius="40dp"
        tools:ignore="HardcodedText" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/quit_room"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="55dp"
        android:gravity="center"
        android:text="退出直播间"
        android:textColor="@color/color_999999"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stop_stream"
        app:layout_goneMarginTop="25dp"
        app:rv_backgroundColor="@color/color_f8f8f8"
        app:rv_cornerRadius="40dp"
        tools:ignore="HardcodedText" />

    <com.mei.widget.gradient.GradientTextView
        android:id="@+id/follow_stop_stream"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="55dp"
        android:gravity="center"
        android:text="下麦"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        app:gd_end_color="@color/color_FF3F36"
        app:gd_radius="40dp"
        app:gd_start_color="@color/color_FF7F33"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quit_room"
        tools:ignore="HardcodedText" />
</com.mei.base.weight.relative.RoundConstraintLayout>