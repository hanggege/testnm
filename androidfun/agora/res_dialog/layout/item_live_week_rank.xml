<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <ImageView
        android:id="@+id/list_week_rank_crown_iv"
        android:layout_width="25dp"
        android:layout_height="22dp"
        android:layout_marginStart="31dp"
        android:contentDescription="@string/week_rank_crown_description"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/color_c8c8c8"
        tools:ignore="MissingConstraints"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/list_ranking_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/color_D8D8D8"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:text="120" />

    <FrameLayout
        android:id="@+id/list_week_rank_avatar_fl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.mei.widget.round.RoundImageView
            android:id="@+id/list_week_rank_avatar_riv"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:radius_all="90dp"
            tools:background="@color/color_FF3F36"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/list_week_rank_status_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:contentDescription="@string/week_rank_user_status_description"
            android:visibility="gone"
            tools:ignore="MissingConstraints,RtlHardcoded"
            tools:src="@drawable/icon_online_bg" />

    </FrameLayout>


    <TextView
        android:id="@+id/list_week_rank_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textColor="@color/color_333333"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/list_week_rank_avatar_fl"
        app:layout_constraintStart_toEndOf="@+id/list_week_rank_avatar_fl"
        app:layout_constraintTop_toTopOf="@+id/list_week_rank_avatar_fl"
        tools:ignore="MissingConstraints"
        tools:text="情感咨询师衣领" />

    <TextView
        android:id="@+id/list_week_rank_receive_crown_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/color_FF4F00"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/list_week_rank_avatar_fl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/list_week_rank_avatar_fl"
        tools:ignore="MissingConstraints"
        tools:text="19.65" />


</androidx.constraintlayout.widget.ConstraintLayout>
