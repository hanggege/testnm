<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="110dp">


    <com.mei.widget.gradient.GradientTextView
        android:id="@+id/tv_item_card_follow_anchor"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="5dp"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:gd_end_color="@color/color_FF3F36"
        app:gd_radius="2dp"
        app:gd_start_color="@color/color_FF7F33" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/tv_card_dialog_send_gift"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:text="送礼"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        app:rv_backgroundColor="#fff5f5f5"
        app:rv_cornerRadius="2dp" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/tv_card_dialog_to_im"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        app:rv_backgroundColor="#fff5f5f5"
        app:rv_cornerRadius="2dp" />
</LinearLayout>