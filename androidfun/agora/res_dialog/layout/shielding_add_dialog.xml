<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:minWidth="310dp"
    android:orientation="vertical"
    app:rv_backgroundColor="@android:color/white"
    app:rv_cornerRadius="8dp">


    <TextView
        android:id="@+id/invite_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:gravity="left"
        tools:text="拉黑后该用户将被踢出直播间，且不能再进入你的直播间，不能发送私聊消息给你，是否确定拉黑？"
        android:textColor="@color/color_333333"
        android:textSize="16sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.flyco.roundview.RoundTextView
            android:id="@+id/cancel_dialog_btn"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginStart="12.5dp"
            android:layout_marginEnd="12.5dp"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_999999"
            android:textSize="15sp"
            app:rv_backgroundColor="@color/color_f8f8f8"
            app:rv_cornerRadius="20dp" />


        <com.mei.widget.gradient.GradientTextView
            android:id="@+id/confirm_dialog_btn"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginStart="12.5dp"
            android:layout_marginEnd="12.5dp"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            app:gd_end_color="@color/color_FF3F36"
            app:gd_radius="22.5dp"
            app:gd_start_color="@color/color_FF7F33" />
    </LinearLayout>
</com.flyco.roundview.RoundLinearLayout>
