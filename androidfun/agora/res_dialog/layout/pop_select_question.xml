<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_select_question_pop"
    android:orientation="vertical">

    <TextView
        android:id="@+id/change_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/icon_change_question"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="12.5dp"
        android:text="换一批"
        android:textColor="@color/alpha70_white"
        android:textSize="11sp"
        tools:ignore="HardcodedText,SmallSp,UseCompatTextViewDrawableXml" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/question_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
</LinearLayout>