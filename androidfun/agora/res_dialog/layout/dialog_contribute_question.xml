<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mei.base.weight.relative.RoundConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:rv_backgroundColor="@android:color/white"
        app:rv_cornerRadius="8dp"
        tools:rv_backgroundColor="@color/color_FFAF00">

        <com.mei.widget.choince.ChoiceView
            android:id="@+id/cancel"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="15dp"
            app:choice_color="#E5E5E5"
            app:choice_type="cross"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/contribute_about"
            android:textColor="@color/color_333333"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back_choice"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:lineSpacingExtra="6dp"
            android:text="@string/contribute_question"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />
    </com.mei.base.weight.relative.RoundConstraintLayout>
</FrameLayout>