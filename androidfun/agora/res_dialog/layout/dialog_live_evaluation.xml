<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:clipChildren="false">

    <com.flyco.roundview.RoundFrameLayout
        android:id="@+id/back_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="37dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rv_backgroundColor="@android:color/white"
        app:rv_cornerRadius_TL="8dp"
        app:rv_cornerRadius_TR="8dp" />

    <com.mei.widget.round.RoundImageView
        android:id="@+id/user_avatar_img"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:radius_all="37dp"
        app:round_stroke_color="@android:color/white"
        app:round_stroke_width="2dp"
        tools:src="@drawable/default_avatar_90" />

    <com.mei.widget.choince.ChoiceView
        android:id="@+id/back_choice"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="15dp"
        app:choice_color="@color/color_999999"
        app:choice_type="cross"
        app:choice_width="1.5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/back_view" />

    <TextView
        android:id="@+id/evaluation_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="期待你的评价\n帮助我们提升服务体验"
        android:textColor="@color/color_333333"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_avatar_img"
        tools:ignore="HardcodedText" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/left_text"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/live_evaluation_sad_selector"
        android:drawablePadding="7.5dp"
        android:gravity="center_vertical"
        android:paddingStart="7.5dp"
        android:text="不满意"
        android:textColor="@color/selector_color_c8c8c8_ff8800"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/center_text"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/evaluation_guide"
        app:rv_backgroundColor="@color/color_f8f8f8"
        app:rv_cornerRadius="20dp"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/center_text"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:drawableStart="@drawable/live_evaluation_general_selector"
        android:drawablePadding="7.5dp"
        android:gravity="center_vertical"
        android:paddingStart="7.5dp"
        android:text="一般"
        android:textColor="@color/selector_color_c8c8c8_ff8800"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/right_text"
        app:layout_constraintStart_toEndOf="@id/left_text"
        app:layout_constraintTop_toTopOf="@id/left_text"
        app:rv_backgroundColor="@color/color_f8f8f8"
        app:rv_cornerRadius="20dp"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/right_text"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="15dp"
        android:drawableStart="@drawable/live_evaluation_good_selector"
        android:drawablePadding="7.5dp"
        android:gravity="center_vertical"
        android:paddingStart="7.5dp"
        android:text="满意"
        android:textColor="@color/selector_color_c8c8c8_ff8800"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/center_text"
        app:layout_constraintTop_toTopOf="@id/left_text"
        app:rv_backgroundColor="@color/color_f8f8f8"
        app:rv_cornerRadius="20dp"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <EditText
        android:id="@+id/input_evaluation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:background="@null"
        android:hint="输入你想说的"
        android:padding="10dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_c8c8c8"
        android:textSize="13sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/right_text"
        app:layout_constraintStart_toStartOf="@id/left_text"
        app:layout_constraintTop_toBottomOf="@id/left_text"
        tools:ignore="HardcodedText" />

    <com.mei.widget.gradient.GradientTextView
        android:id="@+id/commit_btn"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="提交"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:visibility="invisible"
        app:gd_direction="leftToRight"
        app:gd_end_color="@color/color_FF3F36"
        app:gd_radius="40dp"
        app:gd_start_color="@color/color_FF7F33"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_evaluation"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>