<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_marginEnd="10dp"
    android:background="@drawable/bg_user_info_coupon">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/user_info_coupon_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="95dp" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/user_info_left_top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="2dp"
        android:paddingHorizontal="7.5dp"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rv_backgroundColor="@color/color_FF5A5A"
        app:rv_cornerRadius_BR="6dp"
        app:rv_cornerRadius_TL="6dp"
        tools:ignore="SmallSp"
        tools:text="老顾客回馈" />

    <TextView
        android:id="@+id/user_info_discount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/user_info_coupon_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="6.5折券" />

    <TextView
        android:id="@+id/user_info_coupon_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20.5dp"
        android:layout_marginEnd="14.5dp"
        android:gravity="start"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/user_info_deadline_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/user_info_coupon_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="仅限专属服务购买购买课程使用使用使用" />

    <TextView
        android:id="@+id/user_info_deadline_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="14.5dp"
        android:gravity="start"
        android:textColor="@color/color_999999"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/user_info_coupon_line"
        app:layout_constraintTop_toBottomOf="@id/user_info_coupon_title"
        tools:ignore="SmallSp"
        tools:text="有效期至2020.10.10" />

</androidx.constraintlayout.widget.ConstraintLayout>