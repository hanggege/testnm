<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/icon_question"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_question_arrow_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/more_operate"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_more_action"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/send_gift"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_send_gift"
        app:layout_constraintEnd_toStartOf="@+id/more_operate"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/exclusive_service"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_exclusive_service"
        app:layout_constraintEnd_toStartOf="@+id/send_gift"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/chat_message"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_chat_message"
        app:layout_constraintEnd_toStartOf="@+id/exclusive_service"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mei.widget.round.RoundView
        android:id="@+id/icon_im_enter_tip"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_gravity="end"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="9dp"
        app:back_color="#FF0000"
        app:is_circle="true"
        app:layout_constraintEnd_toEndOf="@id/chat_message"
        app:layout_constraintTop_toTopOf="@id/chat_message" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/show_keyboard_view"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="和达人聊聊…"
        android:textColor="@color/alpha75_white"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/icon_question"
        app:layout_constraintEnd_toStartOf="@+id/chat_message"
        app:layout_constraintStart_toEndOf="@id/icon_question"
        app:layout_constraintTop_toTopOf="@id/icon_question"
        app:rv_backgroundColor="@color/masks_layer_30"
        app:rv_cornerRadius="35dp"
        tools:ignore="HardcodedText,RtlSymmetry" />
</androidx.constraintlayout.widget.ConstraintLayout>