<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="110dp"
    android:background="@drawable/bg_server_frame">

    <com.flyco.roundview.RoundFrameLayout
        android:id="@+id/subject_top_view"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rv_backgroundColor="@color/color_FDF1D8"
        app:rv_cornerRadius_TL="4dp"
        app:rv_cornerRadius_TR="4dp" />

    <com.mei.widget.round.RoundImageView
        android:id="@+id/head_service_pub"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:src="@drawable/default_avatar_72"
        app:layout_constraintBottom_toBottomOf="@+id/subject_top_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/subject_top_view"
        app:radius_all="20dp" />

    <TextView
        android:id="@+id/tv_live_mi_remmond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="7.5dp"
        android:textColor="@color/color_FF8200"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/subject_top_view"
        app:layout_constraintStart_toEndOf="@+id/head_service_pub"
        app:layout_constraintTop_toTopOf="@+id/subject_top_view"
        tools:text="知心达人推荐【专属服务】" />

    <TextView
        android:id="@+id/tv_live_service_exclusive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:paddingStart="15dp"
        android:paddingTop="12.5dp"
        android:paddingEnd="15dp"
        android:textColor="@color/color_333333"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subject_top_view"
        tools:text="挽回婚姻，婚内移情和他重获幸福的家庭" />

</androidx.constraintlayout.widget.ConstraintLayout>