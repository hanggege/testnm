<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <com.mei.widget.recyclerview.banner.BannerView
        android:id="@+id/service_exclusrice_banner_view"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="8dp" />


    <com.mei.widget.recyclerview.banner.PageIndicatorView
        android:id="@+id/service_exclusive_indicator_view"
        android:layout_width="wrap_content"
        android:layout_height="6dp"
        android:layout_marginEnd="5dp"
        android:layout_below="@+id/service_exclusrice_banner_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>

