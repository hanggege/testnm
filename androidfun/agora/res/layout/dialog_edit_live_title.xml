<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:rv_backgroundColor="@android:color/white"
    app:rv_cornerRadius_TL="12dp"
    app:rv_cornerRadius_TR="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="修改直播标题"
        android:textColor="@color/color_333333"
        android:textSize="17sp"
        tools:ignore="HardcodedText" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cate_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7.5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="7.5dp"
        android:layout_marginBottom="15dp" />

    <com.flyco.roundview.RoundFrameLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:rv_cornerRadius="4dp"
        app:rv_strokeColor="@color/color_c8c8c8"
        app:rv_strokeWidth="0.25dp">

        <EditText
            android:id="@+id/edit_live_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12.5dp"
            android:layout_marginEnd="12.5dp"
            android:gravity="start"
            android:maxLength="16"
            android:maxLines="2"
            android:padding="15dp"
            android:textColor="@color/color_333333"
            android:textSize="16sp"
            tools:ignore="Autofill,LabelFor,TextFields" />

    </com.flyco.roundview.RoundFrameLayout>

    <com.mei.widget.gradient.GradientTextView
        android:id="@+id/confirm_edit"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/color_c8c8c8"
        android:textSize="15sp"
        app:gd_radius="20dp"
        app:gd_start_color="@color/color_f3f3f3" />
</com.flyco.roundview.RoundLinearLayout>