<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="27.5dp"
    android:layout_marginEnd="27.5dp">

    <ImageView
        android:id="@+id/bg_apply_studio_upstream_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_apply_studio_upstream_head" />

    <com.mei.widget.choince.ChoiceView
        android:id="@+id/back_choice"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:padding="15dp"
        app:choice_color="@android:color/white"
        app:choice_type="cross" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="语音倾诉"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/cost_upstream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        tools:text="（10心币/分钟）" />

    <include
        android:id="@+id/layout_lack_apply_studio_bottom"
        layout="@layout/layout_lack_apply_studio_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bg_apply_studio_upstream_head"
        android:visibility="gone" />

    <include
        android:id="@+id/layout_enough_apply_studio_bottom"
        layout="@layout/layout_enough_apply_studio_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bg_apply_studio_upstream_head" />
</RelativeLayout>