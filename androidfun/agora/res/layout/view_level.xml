<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <com.mei.widget.gradient.GradientTextView
        android:id="@+id/live_user_role_ta"
        android:layout_width="28dp"
        android:layout_height="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:text="助教"
        android:textColor="@android:color/white"
        android:textSize="8sp"
        android:visibility="gone"
        app:gd_end_color="@color/color_FA3998"
        app:gd_radius="8dp"
        app:gd_start_color="@color/color_FB686F"
        tools:ignore="HardcodedText,SmallSp"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/live_mentor_tag_img"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/live_mentor_img" />

    <ImageView
        android:id="@+id/icon_studio_member"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/icon_studio_member"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/live_room_message_service"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/icon_service_bg"
        android:gravity="center"
        android:maxLength="3"
        android:paddingStart="13dp"
        android:paddingEnd="3dp"
        android:shadowColor="#40000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:textColor="@android:color/white"
        android:textSize="8sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:ignore="RtlSymmetry,SmallSp"
        tools:text="安娜家"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/level_text"
        android:layout_width="34dp"
        android:layout_height="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:gravity="center_vertical|right"
        android:maxLength="2"
        android:paddingEnd="10dp"
        android:shadowColor="#40000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        tools:background="@drawable/normal_level_one"
        tools:ignore="RtlHardcoded,RtlSymmetry,SmallSp"
        tools:text="5"
        tools:visibility="visible" />

    <com.mei.widget.gradient.GradientTextView
        android:id="@+id/live_user_role_view"
        android:layout_width="37dp"
        android:layout_height="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:text="知心达人"
        android:textColor="@android:color/white"
        android:textSize="8sp"
        android:visibility="gone"
        app:gd_end_color="@color/color_5BBE57"
        app:gd_radius="8dp"
        app:gd_start_color="@color/color_74DD49"
        tools:ignore="HardcodedText,SmallSp"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/live_ios_user_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/icon_ios_user" />
</LinearLayout>