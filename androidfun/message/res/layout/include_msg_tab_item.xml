<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="68dp"
    android:layout_height="wrap_content"
    android:clipChildren="false">


    <LinearLayout
        android:id="@+id/tab_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tab_item_title"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal|bottom"
            android:includeFontPadding="false"
            android:text="通知"
            android:textColor="#262626"
            android:textSize="21sp"
            tools:ignore="HardcodedText" />

        <com.mei.widget.redpoint.RedPointView
            android:id="@+id/red_point_view1"
            android:layout_width="wrap_content"
            android:layout_height="7dp"
            android:layout_marginStart="-2dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="10sp"
            app:back_color="@android:color/holo_red_light"
            tools:ignore="HardcodedText,SmallSp"
            tools:text="" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/red_point_view2"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="9sp"
            app:rv_backgroundColor="@android:color/holo_red_light"
            app:rv_cornerRadius="10dp"
            tools:ignore="SmallSp"
            tools:text="1" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/tab_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tab_item_layout"
        android:layout_marginEnd="23dp">

        <com.flyco.roundview.RoundFrameLayout
            android:layout_width="27dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5.5dp"
            android:layout_marginBottom="1dp"
            app:rv_backgroundColor="#303030"
            app:rv_cornerRadius="2dp" />
    </FrameLayout>

</RelativeLayout>