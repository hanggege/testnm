<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.mei.base.weight.richtext.view.DataImageLinearLayout
        android:id="@+id/img_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="1dp"
        android:background="@drawable/main_color_white_selector"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/edit_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/default_err" />
    </com.mei.base.weight.richtext.view.DataImageLinearLayout>

    <ImageView
        android:id="@+id/image_close"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_alignRight="@id/img_container"
        android:layout_alignTop="@id/img_container"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="-15dp"
        android:scaleType="fitXY"
        android:src="@drawable/delete_img_icon"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>