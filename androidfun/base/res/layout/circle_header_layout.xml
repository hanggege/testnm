<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F9F9F9">

    <ImageView
        android:id="@+id/xiaolu_refresh_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:src="@drawable/circle_loading" />

    <TextView
        android:id="@+id/xiaolu_refresh_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/xiaolu_refresh_icon"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="15dp"
        android:textSize="12sp"
        android:text="@string/xiaolu_slogan"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_c8c8c8" />

</RelativeLayout>